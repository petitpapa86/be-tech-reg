<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Include Spring Boot's default configuration -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- For dev profile use a simple, readable console pattern; for other profiles keep JSON output -->
    <!-- Default console (readable) - used unless a profile overrides the root logger to use JSON -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%X{traceId:-}/%X{spanId:-}] %-5level %logger{36} - %msg%ncontext bank-id=%X{bank-id:-} user-id=%X{user-id:-} batch-id=%X{batch-id:-}%n</pattern>
        </encoder>
    </appender>

    <!-- JSON console appender (for non-dev environments) -->
    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <!-- Timestamp -->
                <timestamp>
                    <fieldName>timestamp</fieldName>
                    <timeZone>UTC</timeZone>
                </timestamp>

                <!-- Log level -->
                <logLevel>
                    <fieldName>severity</fieldName>
                </logLevel>

                <!-- Logger name -->
                <loggerName>
                    <fieldName>logger</fieldName>
                </loggerName>

                <!-- Message -->
                <message/>

                <!-- Exception -->
                <stackTrace>
                    <fieldName>exception</fieldName>
                </stackTrace>

                <!-- MDC fields -->
                <mdc/>

                <!-- Thread name -->
                <threadName>
                    <fieldName>thread</fieldName>
                </threadName>
            </providers>
        </encoder>
    </appender>

    <!-- For non-dev profiles, switch the root logger to JSON output -->
    <springProfile name="!dev,!development">
        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE"/>
        </root>
    </springProfile>

    <!-- JSON appender for GCP production -->
    <appender name="GCP_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <!-- Timestamp -->
                <timestamp>
                    <fieldName>timestamp</fieldName>
                    <timeZone>UTC</timeZone>
                </timestamp>

                <!-- Log level -->
                <logLevel>
                    <fieldName>severity</fieldName>
                </logLevel>

                <!-- Logger name -->
                <loggerName>
                    <fieldName>logger</fieldName>
                </loggerName>

                <!-- Message -->
                <message/>

                <!-- Exception -->
                <stackTrace>
                    <fieldName>exception</fieldName>
                </stackTrace>

                <!-- MDC fields -->
                <mdc/>

                <!-- Thread name -->
                <threadName>
                    <fieldName>thread</fieldName>
                </threadName>

                <!-- Custom fields for GCP -->
                <provider class="net.logstash.logback.provider.StructuredArgumentsJsonProvider">
                    <fieldName>context</fieldName>
                    <value>${mdc:module:-unknown}</value>
                </provider>

                <provider class="net.logstash.logback.provider.StructuredArgumentsJsonProvider">
                    <fieldName>component</fieldName>
                    <value>${mdc:component:-unknown}</value>
                </provider>

                <provider class="net.logstash.logback.provider.StructuredArgumentsJsonProvider">
                    <fieldName>operation</fieldName>
                    <value>${mdc:operation:-unknown}</value>
                </provider>

                <provider class="net.logstash.logback.provider.StructuredArgumentsJsonProvider">
                    <fieldName>correlationId</fieldName>
                    <value>${mdc:correlationId:-unknown}</value>
                </provider>

                <provider class="net.logstash.logback.provider.StructuredArgumentsJsonProvider">
                    <fieldName>messageId</fieldName>
                    <value>${mdc:messageId:-unknown}</value>
                </provider>

                <provider class="net.logstash.logback.provider.StructuredArgumentsJsonProvider">
                    <fieldName>eventType</fieldName>
                    <value>${mdc:eventType:-unknown}</value>
                </provider>
            </providers>
        </encoder>
    </appender>

    <!-- Root logger configuration (default/dev) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Application loggers: dev -> readable console, non-dev -> JSON console -->
    <springProfile name="dev,development">
        <logger name="com.bcbs239.regtech" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <logger name="com.bcbs239.regtech.core.events" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <logger name="com.bcbs239.regtech.core.inbox" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <logger name="com.bcbs239.regtech.core.outbox" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <logger name="com.bcbs239.regtech.iam" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <logger name="com.bcbs239.regtech.billing" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
    </springProfile>

    <springProfile name="!dev,!development">
        <logger name="com.bcbs239.regtech" level="INFO" additivity="false">
            <appender-ref ref="JSON_CONSOLE"/>
        </logger>

        <logger name="com.bcbs239.regtech.core.events" level="INFO" additivity="false">
            <appender-ref ref="JSON_CONSOLE"/>
        </logger>

        <logger name="com.bcbs239.regtech.core.inbox" level="INFO" additivity="false">
            <appender-ref ref="JSON_CONSOLE"/>
        </logger>

        <logger name="com.bcbs239.regtech.core.outbox" level="INFO" additivity="false">
            <appender-ref ref="JSON_CONSOLE"/>
        </logger>

        <logger name="com.bcbs239.regtech.iam" level="INFO" additivity="false">
            <appender-ref ref="JSON_CONSOLE"/>
        </logger>

        <logger name="com.bcbs239.regtech.billing" level="INFO" additivity="false">
            <appender-ref ref="JSON_CONSOLE"/>
        </logger>
    </springProfile>

    <!-- Spring framework loggers -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.security" level="WARN"/>
    <logger name="org.hibernate.SQL" level="WARN"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="WARN"/>

    <!-- Async processing loggers -->
    <logger name="org.springframework.scheduling" level="INFO"/>
    <logger name="org.springframework.aop" level="WARN"/>

    <!-- Security Audit Logger - dedicated logger for security audit events -->
    <!-- This logger writes to a separate file for compliance and security monitoring -->
    <appender name="SECURITY_AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/security-audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/security-audit-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <fieldName>timestamp</fieldName>
                    <timeZone>UTC</timeZone>
                </timestamp>
                <logLevel>
                    <fieldName>severity</fieldName>
                </logLevel>
                <loggerName>
                    <fieldName>logger</fieldName>
                </loggerName>
                <message/>
                <stackTrace>
                    <fieldName>exception</fieldName>
                </stackTrace>
                <mdc/>
                <threadName>
                    <fieldName>thread</fieldName>
                </threadName>
            </providers>
        </encoder>
    </appender>

    <!-- Security Audit Logger configuration -->
    <logger name="SECURITY_AUDIT" level="INFO" additivity="false">
        <appender-ref ref="SECURITY_AUDIT_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
</configuration>